# =============================================================================
# Follow The Goat - Environment Configuration
# =============================================================================
# Copy this file to .env in the project root and fill in your values.
#
# PostgreSQL Setup:
#   1. Install PostgreSQL
#   2. Create user and database:
#      CREATE USER ftg_user WITH PASSWORD 'your_password';
#      CREATE DATABASE follow_the_goat_archive OWNER ftg_user;
#   3. Run migration: python scripts/migrate_mysql_to_postgres.py

# -----------------------------------------------------------------------------
# OLD MySQL Database (Windows) - For importing plays table ONCE
# -----------------------------------------------------------------------------
# These credentials are ONLY needed when running:
#   python scripts/import_plays_from_old_mysql.py
# After importing plays once, you can comment these out.
OLD_MYSQL_HOST=localhost
OLD_MYSQL_USER=solcatcher
OLD_MYSQL_PASSWORD=jjJH!la9823JKJsdfjk76jH
OLD_MYSQL_DATABASE=solcatcher
OLD_MYSQL_PORT=3306

# -----------------------------------------------------------------------------
# PostgreSQL Archive Database (WSL)
# -----------------------------------------------------------------------------
# This is the LOCAL PostgreSQL for archiving expired data.
# Not required for the trading bot to run - only for long-term data storage.
DB_HOST=127.0.0.1
DB_USER=ftg_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=follow_the_goat_archive
DB_PORT=5432

# -----------------------------------------------------------------------------
# Hot Storage Retention
# -----------------------------------------------------------------------------
# Hours to keep data in DuckDB before archiving to PostgreSQL
HOT_STORAGE_HOURS=24
TRADES_HOT_STORAGE_HOURS=72

# -----------------------------------------------------------------------------
# Scheduler Settings
# -----------------------------------------------------------------------------
SCHEDULER_TZ=UTC
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Trading Features (1=enabled, 0=disabled)
# -----------------------------------------------------------------------------
TRAIN_VALIDATOR_ENABLED=1
FOLLOW_THE_GOAT_ENABLED=1
TRAILING_STOP_ENABLED=1
UPDATE_POTENTIAL_GAINS_ENABLED=1
CREATE_NEW_PATTERNS_ENABLED=1

# -----------------------------------------------------------------------------
# Jupiter API (required for price fetching)
# -----------------------------------------------------------------------------
# Get free key at: https://portal.jup.ag
JUPITER_API_KEY=your_jupiter_api_key_here

